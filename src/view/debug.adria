/**
 * debug singleton (view)
 */

/**
 * displays forwarded think log entry
 */
export logThink = func(...args) {

    args.unshift('(think)');
    console.log.apply(console, args);
};

/**
 * displays view log entry
 */
export log = func(...args) {

    args.unshift('(view)');
    console.log.apply(console, args);
};

/**
 * call client debug enable function, @see client/debug.js/enable
 */
export enable = func(...args) {

    application.rpc.call('debug.enable', args);
};

/**
 * call client debug disable function, @see client/debug.js/disable
 */
export disable = func(...args) {

    application.rpc.call('debug.disable', args);
};

/**
 * call client debug seen function, @see client/debug.js/seen
 */
export seen = func() {

    application.rpc.call('debug.seen', [ ], func(result) {
        console.log(result);
    });
};