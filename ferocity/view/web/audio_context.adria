/**
 * a dummy audio context doing nothing
 */
var DummySource = proto {
    connect: func() { },
    start: func(x) { },
};

module AudioContext = (func() {
// window.AudioContext || window.webkitAudioContext ||
    return  (func() {

        this.destination = null;
        this.activeSourceCount = -1;
        this.createGain = func() { return new DummySource(); };
        this.createPanner = this.createGain;
        this.createBufferSource = this.createGain;
        this.createDynamicsCompressor = this.createGain;
        this.decodeAudioData = func(a, b) {
            setTimeout(func() {
                b(a);
            }, 0);
        };
    });

})();
